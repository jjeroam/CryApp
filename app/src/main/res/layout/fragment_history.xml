<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Date Picker Button -->
    <ImageButton
        android:id="@+id/buttonDatePicker"
        android:layout_width="51dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:importantForAccessibility="no"
        android:scaleType="centerInside"
        android:src="@drawable/calendar_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/colorPrimary" />

    <!-- Sorting Button -->
    <ImageButton
        android:id="@+id/buttonSort"
        android:layout_width="51dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/transparent"
        android:importantForAccessibility="no"
        android:scaleType="centerInside"
        android:src="@drawable/sort_svgrepo_com"
        app:layout_constraintStart_toEndOf="@id/buttonDatePicker"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/colorPrimary" />

    <!-- Clear All Button -->
    <ImageButton
        android:id="@+id/buttonClearAll"
        android:layout_width="51dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        android:importantForAccessibility="no"
        android:scaleType="centerInside"
        android:src="@drawable/trash_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/colorPrimary" />

    <!-- ListView for History Items -->
    <ListView
        android:id="@+id/historyListView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDatePicker"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
